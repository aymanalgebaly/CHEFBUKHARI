<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SelectedItemFragment">

    <!-- TODO: Update blank fragment layout -->


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_back"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginStart="25dp"
            tools:ignore="PrivateResource" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_back_ar"
        android:visibility="gone"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_marginStart="25dp"
            tools:ignore="PrivateResource" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/main_slider"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY">

        </com.daimajia.slider.library.SliderLayout>

        </androidx.cardview.widget.CardView>


        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            app:shape="oval"
            android:visibility="visible"
            app:selected_color="@color/red_dark"
            app:unselected_color="@color/gray_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@drawable/solid_gray_curv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="3"

                android:gravity="end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:text="kabab awsal"
                    android:textStyle="bold"
                    android:id="@+id/title"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="22sp"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <androidx.cardview.widget.CardView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/shadow">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/shadow"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/red_heart" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:text="10"
                    android:id="@+id/price"
                    android:gravity="end"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="@string/sr"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="22sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:textSize="20sp"
                android:textColor="@color/red"
                android:layout_marginStart="20dp"/>
            <View
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:background="@color/red"
                android:layout_marginStart="20dp">

            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:id="@+id/desc"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="false"
            android:scaleX="0.8"
            android:id="@+id/rating"
            android:scaleY="0.8"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/extra_requests"
            android:textSize="18sp"
            android:layout_marginStart="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:background="@drawable/stroke_gray_register_field"
            android:layout_marginEnd="20dp"
            android:id="@+id/ed_extra_request"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/img_min"
                android:padding="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/min"/>

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                android:background="@color/error">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/number"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_plus"
                android:padding="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/plus"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:id="@+id/btn_add"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/curv_button_solid_red"
            android:text="@string/add"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>