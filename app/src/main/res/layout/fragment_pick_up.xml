<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".ui.fragments.PickUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/rel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/txt_title"
            android:layout_centerHorizontal="true"
            android:text="Cart Shopping"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_back"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_marginStart="50dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_back_ar"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_marginStart="50dp"
            tools:ignore="PrivateResource" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:id="@+id/txt_pick"
        android:text="@string/pickup_branch"
        android:layout_marginTop="50dp"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:id="@+id/sp_branch"
        android:background="@drawable/stroke_gray_register_field"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="@string/delivery_time"
        android:id="@+id/txt_time"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:id="@+id/txt_time"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@drawable/stroke_gray_register_field"
        android:layout_marginTop="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/curv_button_solid_red"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/checkout"
        android:id="@+id/btn_checkOut"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>